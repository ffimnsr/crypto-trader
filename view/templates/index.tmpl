{{define "content"}}
<header class="container override-bg-dark">
  <nav class="navbar">
    <section class="navbar-section">
      <a href="/" class="navbar-brand mr-2 text-light">Crypto Trader</a>
    </section>
  </nav>
</header>
<section class="container">
  <div class="columns">
    <div class="column col-4">
      <form action="/bot/change-strategy" method="post">
        <div class="form-group">
          <label for="algorithm-picker" class="form-label">Strategy to use</label>
          <select name="algorithm" id="algorithm-picker" class="form-select">
            <option selected disabled>Choose strategy to use</option>
            {{range $key, $value := .strategies}}
              <option value="{{$key}}">{{$value}}</option>
            {{end}}
          </select>
        </div>
        <div class="form-group">
          <button type="submit">Change Settings</button>
        </div>
      </form>
    </div>
    <div class="colum col-6">
      <iframe name="price-graph" src="http://localhost:3000/d-solo/LJ11ormmk/crypto-trader-overview?orgId=1&panelId=2" width="100%" height="300" frameborder="0"></iframe>
      <iframe name="win-loss-graph" src="http://localhost:3000/d-solo/LJ11ormmk/crypto-trader-overview?orgId=1&panelId=4" width="100%" height="200" frameborder="0"></iframe>
    </div>
  </div>
</section>
<section class="container">

</section>
<footer>
  <br>
</footer>
{{end}}
